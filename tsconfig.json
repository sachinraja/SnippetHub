{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
    ],
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*",
      ],
      "@hooks/*": [
        "src/hooks/*",
      ],
      "@layouts/*": [
        "src/layouts/*",
      ],
      "@lib/*": [
        "src/lib/*",
      ],
      "@graphql/*": [
        "src/graphql/*",
      ],
      "@graphql-types": [
        "node_modules/@types/graphql-let/__generated__/__types__",
      ],
    },
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/next-env.d.ts",
    "*.config.js",
    ".eslintrc.js",
  ],
  "exclude": [
    "node_modules",
    ".next",
    ".cache",
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
    },
  },
}